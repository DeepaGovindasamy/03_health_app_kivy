#:import button kivymd.uix.button
#:import label kivymd.uix.label


<Home4Screen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 15
        
        MDTextField:
            id: search_wiki 
            hint_text: "Enter your search here"
            helper_text: "look up in Wikipedia"
            helper_text_mode: "on_focus"
            icon_right: "magnify"
            pos_hint: {"center_y": 1}
        MDFillRoundFlatButton:
            text: "Start Search"
            size_hint_x: 0.8
            size_hint_y: 0.1
            pos_hint:{'center_x': 0.5}
            on_press: root.wiki_search()
        BoxLayout:
            padding: 15
            ScrollView:
                MDLabel:
                    id: search_result
                    text: "Welcome to Wikipedia Reader!"
                    size_hint_y: None
                    height: self.texture_size[1]
                    text_size: self.width, None
                    line_height: 1.15
            

    MDFloatingActionButton:
        icon: "wikipedia"
        pos_hint:{'center_x': 0.9, 'center_y': 0.05}
        md_bg_color: app.theme_cls.primary_color